<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}">

    <include
        android:id="@+id/menuTop"
        layout="@layout/action_bar_home" />

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:padding="20dp"
        android:src="@drawable/girl"
        android:layout_above="@+id/menuHome"
        android:layout_below="@+id/menuTop" />


    <LinearLayout
        android:id="@+id/menuHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/tabs_bar"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/tvCamera"
            style="@style/tabs_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_camera_active"
            android:gravity="center"
            android:padding="10dp"
            android:text="Camera" />

        <TextView
            android:id="@+id/tvEditPhoto"
            style="@style/tabs_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_edit_active"
            android:gravity="center"
            android:padding="10dp"
            android:text="Edit" />

        <TextView
            android:id="@+id/tvGallery"
            style="@style/tabs_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_gallery_active"
            android:gravity="center"
            android:padding="10dp"
            android:text="Gallery" />

        <TextView
            android:id="@+id/tvCollage"
            style="@style/tabs_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_collage_active"
            android:gravity="center"
            android:padding="10dp"
            android:text="Collage" />
    </LinearLayout>
</RelativeLayout>